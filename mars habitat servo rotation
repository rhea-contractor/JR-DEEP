#include <Servo.h>

Servo servo;
const int SERVO_PIN = 9;

void setup() {
  servo.attach(SERVO_PIN);
}

void loop() {
  // 0 -> 180
  for (int pos = 0; pos <= 180; pos++) {
    servo.write(pos);
    delay(15); // increase to slow down, decrease to speed up
  }
  // 180 -> 0
  for (int pos = 180; pos >= 0; pos--) {
    servo.write(pos);
    delay(15);
  }
}
